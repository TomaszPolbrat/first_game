answer = input("Do you love your brother?:")
while not (answer.lower() == "yes" or answer.lower()) == "no":
   time.sleep(2)
   answer = input ('JUST SAY YES OR NO!')
if answer.lower() == "yes":
   time.sleep(2)
   print("Raf loves you too!")
elif answer.lower() == "no":
   time.sleep(2)
   print("It is okey,Raf loves you either way")
   time.sleep(2)
