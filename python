import time

sex_pronoun = "placeholder"
name_list = ["Rafas","Kostas","Stelios","Vaso","Litsa","Maria"]
weapon_list = ["Sword", "Axe", "Spear"]

time.sleep(2)
print("Your mission is to find the treasure.")
time.sleep(5)
print("This is going to be an extremely difficult challenge, where lurking monsters await to kill ya.")
time.sleep(5)
print("In the beginning, you are brought ashore on a deserted and forgotten island, after a storm hit your ship. Everyone is dead. You are the sole survivor.")
time.sleep(5)
print("To survive, you have to head into the center of the island and solve some puzzles to get food and water. Good luck soldier.")
time.sleep(5)

sex = input("Do you want to play as a boy or a girl (lowercase)?")
while not (sex == "boy" or sex == "girl"):
    sex = input('PLEASE enter boy or girl as sex, only!')

if sex == "boy":
    sex_pronoun = "he"
    time.sleep(2)
    name1 = input(f"Choose a name from these => {name_list[0]},{name_list[1]},{name_list[2]}:")
    #while not (name1.lower() == 'rafas' or name1.lower() == "kostas" or name1.lower() == "stelios"):
    while not (name1 in name_list):
        time.sleep(2)
        name1 = input(f"Please choose a name from these => {name_list[0]},{name_list[1]},{name_list[2]}.")
    if name1 in name_list:
        time.sleep(2)
        print(f"Welcome {name1}.")


if sex == "girl":
    sex_pronoun = "she"
    time.sleep(2)
    name1 = input(f"Choose a name from these => {name_list[3]},{name_list[4]},{name_list[5]}:")
    while not (name1 in name_list):
        time.sleep(2)
        name1 = input(f"Please choose a name from these => {name_list[3]},{name_list[4]},{name_list[5]}.")
    if name1 in name_list:
        time.sleep(2)
        print(f"Welcome {name1}.")



#weapon choosing phase
time.sleep(2)
riddle = input(f"Now that you have chosen a name, choose your weapon from the list below.\nList of weapons : {weapon_list[0]}, {weapon_list[1]}, {weapon_list[2]}:")
time.sleep(2)
while not (riddle in weapon_list):
    time.sleep(2)
    riddle = input(f"Now that you have chosen a name, choose your weapon from the list of weapons : {weapon_list[0]}, {weapon_list[1]}, {weapon_list[2]}:")
    time.sleep(2)
if riddle in weapon_list:
   time.sleep(2)
   print(f"The {riddle.lower()} is a fine choice!")

time.sleep(3)
print("Now its time for you to head into the island.")
time.sleep(2)
print("WOW, take care! You found a crossway!")

#pathchoosing
time.sleep(2)
path = input("Choose either left, or right:")
time.sleep(3)
while not (path == "left" or path == "right"):
    time.sleep(2)
    path = input("Please, type ONLY left or right.")
if path.lower() == "left":
    time.sleep(2)
    path2 = input("You have come across another crossway! Choose left or right again! :")
    while not (path2.lower() == "left" or path2.lower() == "right"):
        time.sleep(2)
        path2 = input("Please enter left or right ONLY!")
    if path2.lower() == "left":
        time.sleep(2)
        print("Congrats, you found the secret Sunshield!")
    elif path2.lower() == "right":
        time.sleep(2)
        print("You were too hasty and you missed on the good stuff.")
if path.lower() == "right":
    time.sleep(2)
    print("Congratulations, you found a secret spear!")



#riddlephase #<<x>> will be used instead of <<userword>> to shorten the code
time.sleep(3)
print(f"As {name1} was running...{sex_pronoun} found a riddle to solve.\n You have to find a word that contains at least 3 of the letters listed to proceed.\nList => a,e,r,u,p,t")
passed_riddle = False


time.sleep(2)
while passed_riddle == False:
    riddle = input("Please enter your word here:")
    time.sleep(2)
    riddle = riddle.lower()
    letters = riddle.count("a") +riddle.count("e")+ riddle.count("r") + riddle.count("u") +riddle.count("p") + riddle.count("t")


    if letters >=3:
        time.sleep(2)
        print ("You have successfully passed the trial.")
        passed_riddle = True

    elif letters >=1 and letters <=2:
        time.sleep(2)
        print("You have one more chance.")

    else:
        time.sleep(2)
        print("You are dead and will respawn in 5 seconds.")
        time.sleep(3)

time.sleep(3)

print("Now that the trial is passed, you need to play the ultimate game...")
time.sleep(2)

